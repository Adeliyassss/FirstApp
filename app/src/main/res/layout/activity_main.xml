<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/green"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/text_view"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="REGISTER"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"/>
    <View
        android:id="@+id/line22"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:background="@color/white"
        android:layout_height="0.5sp"
        tools:ignore="MissingConstraints"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_view"
        />

    <EditText
        android:id="@+id/text_user"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/line22"
        android:background="@drawable/my_icon"
        android:layout_marginHorizontal="32dp"
        android:layout_marginTop="30dp"
        android:text="Username          Trivia"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textColorHint="@color/white"
        android:paddingHorizontal="16dp"
        />
    <EditText
        android:id="@+id/text_two"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_user"
        android:background="@color/light"

        android:layout_marginHorizontal="32dp"
        android:layout_marginTop="10dp"
        android:text="Email"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:paddingHorizontal="16dp"
        />
    <EditText
        android:id="@+id/text_three"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_two"
        android:background="@drawable/icon_two"
        android:layout_marginHorizontal="32dp"
        android:layout_marginTop="10dp"
        android:text="Password"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:paddingHorizontal="16dp"
        />


    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_one"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/text_three"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"
        android:text="@string/next"
        android:paddingVertical="12dp"
        app:cornerRadius="70dp"
        android:backgroundTint="@color/white"
        android:layout_marginHorizontal="26dp"
        android:textColor="@color/black"
        android:drawableRight="@drawable/ic_arrow"
        android:paddingLeft="20dp"
        />


    <TextView
        android:id="@+id/text_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Trivia"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:textSize="30sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="500dp"/>

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/ic_logo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/text_logo"
        app:layout_constraintTop_toBottomOf="@+id/btn_one"
        android:layout_marginBottom="2dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="150dp" />
    


</androidx.constraintlayout.widget.ConstraintLayout>